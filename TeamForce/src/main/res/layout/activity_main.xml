                android:drawableLeft="@drawable/ic_menu_database"
                android:background="@drawable/btn_donwload"/>


        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">
            <Button
