                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/btnAbout"
                android:background="@drawable/btn_tienda"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_menu_presentation"
                style="@style/LabelTextBlackRight"
                />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/foroBtn"
                android:background="@drawable/btn_foro"
                style="@style/LabelTextBlackRight"
                android:drawableLeft="@drawable/ic_menu_feed"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/visitarWebBtn"
                android:background="@drawable/btn_videos"
                style="@style/LabelTextBlackRight"
                android:drawableLeft="@drawable/ic_menu_movie"
                android:layout_weight="1"
                />

        </TableRow>

        <!-- <TableLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:baselineAligned="false"
         android:background="#ffffff">-->
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <Button
                android:id="@+id/btnConfiguracion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/msgConfiguracion"
                android:background="@drawable/btn_sobre"
                style="@style/LabelTextBlack1480"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/ic_menu_settings"
                android:layout_weight=".5"
                />

            <!--<Button
                android:id="@+id/btnInfo"
                android:layout_width="match_parent"
