<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:scrollbars="horizontal"
    android:background="@android:color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="@android:color/black"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageButton
            android:id="@+id/imageButtonLogo"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:contentDescription="Jiayu.es"
            android:clickable="false"
            android:scaleType="centerCrop"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:adjustViewBounds="false"
            android:src="@drawable/teamlogic"
            android:background="@android:color/transparent"
            android:layout_weight="3"
            android:layout_span="3"
            />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="30dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButtonWeb"
                android:layout_span="1"
                android:background="@drawable/w"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Web"
                android:layout_span="1"
                android:textColor="@android:color/white"
                android:id="@+id/textViewWeb"
                />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButtonFacebook"
                android:paddingLeft="30dp"
                android:layout_marginLeft="30dp"
                android:layout_span="1"
                android:background="@drawable/f"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Facebook"
                android:layout_span="1"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"
                android:id="@+id/textViewFacebook"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="40dp"
            android:paddingLeft="30dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_span="1"
                android:id="@+id/imageButtonGoogle"
                android:background="@drawable/g"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Google+"
                android:textColor="@android:color/white"
                android:id="@+id/textViewGoogle"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="30dp"
                android:layout_span="1"
                android:id="@+id/imageButtonRss"
                android:background="@drawable/r"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Rss"
                android:textColor="@android:color/white"
                android:id="@+id/textViewRss"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="40dp"
            android:paddingLeft="30dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_span="1"
                android:id="@+id/imageButtonTwitter"
                android:background="@drawable/t"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Twitter"
                android:textColor="@android:color/white"
                android:id="@+id/textViewTwitter"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingLeft="30dp"
                android:layout_marginLeft="30dp"
                android:layout_span="1"
                android:id="@+id/imageButtonYoutube"
                android:background="@drawable/y"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:layout_span="1"
                android:textAppearance="?android:attr/textAppearance"
                android:text="Youtube"
                android:textColor="@android:color/white"
                android:id="@+id/textViewYoutube"/>
        </TableRow>


    </TableLayout>
</ScrollView>